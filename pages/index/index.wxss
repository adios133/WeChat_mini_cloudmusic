/* pages/index/index.wxss */

/* 轮播图 */
.top-swiper {
  width: 100%;
  height:350rpx;
}
.top-swiper .swiper-item {
  width: 100%;
}
.swiper-item image {
  width: 100%;
}

/* recommend部分 */
.recommend {
  display: flex;
  margin-top: 20rpx;
  justify-content: space-evenly;
  text-align: center;
  font-size: 26rpx;
}
.recommend-item {
  display: flex;
  flex-direction: column;
}
.recommend-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  background-color:#F62A18;
  color: #fff;
  border-radius: 50%;
}

/* 推荐细节 */
.rec-playlist {
  display: flex;
  height: 300rpx;
}
.rec-playlist .rec-playlist-item:last-child {
  padding-right: 16rpx;
}
.rec-playlist-item {
  margin: 10rpx 16rpx;
}

.rec-playlist-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.playlist-name {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 24rpx;
  padding: 0 8rpx;
}

/* 排行榜数据 */
.rank-page {
  height: 520rpx;
}
.rank-item .title {
  margin: 16rpx;
  font-size: 26rpx;
}
.rank-item {
  margin: 16rpx;
  /* background-color: #eee; */
  border-radius: 20rpx;
}
.song-cart {
  margin: 16rpx;
  padding: 16rpx 0;
  border-bottom: 1px solid #eee;
}
.song-cart .song-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  vertical-align: middle;
}
.song-cart .song-num {
  margin: 0 40rpx;
}
